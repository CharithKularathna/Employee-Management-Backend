<%- include('../partial/header') -%>
<%- include('sidebar') -%>

<div class="container-fluid">
    <div class="table-wrapper main">
        <% if (sups.length > 0) {%>
            <table class="table table-hovered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col"></th>
        
                    </tr>
                </thead>
                <tbody>
                <% sups.forEach(function(sup, index){ %>
                    <tr>
                        <th scope="row"><%= sup.e_id %></th>
                        <td><button class="btn btn-outline" id="addbutton" onClick=addSup("<%= sup.e_id %>")>Add</button></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <% } else { %>
            <p class="text-center">No Managers found.</p>
            <% } %>
    </div>
</div>
<script>
        function addSup(id){
            $.ajax({
                type: 'POST',
                url: 'addSUP',
                data: {
                    "id": id
                },
                success: function (result) {
                    location.reload();
                }
            });
        }
</script>
</div>   
</body>